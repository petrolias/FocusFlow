@page "/login"

<h3>Login</h3>

<EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
    <!-- Login form fields -->
    <DataAnnotationsValidator />
    <ValidationSummary />
    <InputText id="email" @bind-Value="loginModel.Email" placeholder="Email" />
    <InputText id="password" @bind-Value="loginModel.Password" placeholder="Password" type="password" />
    <button type="submit">Login</button>
</EditForm>

@code {
    private LoginModel loginModel = new LoginModel();

    [Inject]
    private IAuthService AuthService { get; set; }

    private async Task HandleLogin()
    {
        var result = await AuthService.LoginAsync(loginModel.Email, loginModel.Password);
        if (result)
        {
            // Redirect to dashboard or another page
        }
        else
        {
            // Show error message
        }
    }

    public class LoginModel
    {
        public string Email { get; set; }
        public string Password { get; set; }
    }
}